{
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "src",
		"target": "es2022",
		"moduleResolution": "node",
		"module": "es2022",
		"inlineSourceMap": false,
		"lib": ["es2020", "dom"],
		"esModuleInterop": true,
		"sourceMap": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"strict": true,
		"traceResolution": false,
		"types": ["node", "jest"],
		"outDir": "lib",
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib", "src/**/*.spec.ts"]
}
